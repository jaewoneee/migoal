extends layout

block content
  .bg_black
  .content#goal_wrap
    .goal_wrap_inner
      header
        h1#logo
        a(href="/login/logout" aria-label="로그아웃 버튼")#logout_btn logout
      ul.list 
        each goal in goals
          li.list-item
            p.goal-title= goal.title
            input(type="hidden" value=goal.chk)
            div.end-text.fr end
            div.goal-days.fr
              .current-day
              .left-day= goal.period
              .start-day= goal.saved_at
              .goal-id= goal.goal_id
        li.empty-item1
        li.empty-item2
    #btn_wrap
      button(aria-label="목표추가 버튼")#add_btn.fr add     
  script(src="../javascripts/migoal.js" type="module") 
  script(src="../lib/period.js")


